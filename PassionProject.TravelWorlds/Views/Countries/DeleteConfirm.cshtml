@model PassionProject.TravelWorlds.Models.CountriesDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Country</h2>

<div style="font-size:30px; float:right;">
    <a class="cancel" href="/Countries/List">Cancel</a>
</div>



<h3> Are You sure want to delete country?</h3>


<h1>@Model.CountryID.@Model.CountryName</h1>


<form action="/Countries/Delete/@Model.CountryID" method="POST">
     <input type="submit" value="Confirm Delete" />

</form>

<style>

    .cancel {
        background-color: #0094ff;
        border-radius: 5px;
        padding: 10px 15px;
        text-decoration: none;
        color: #fff;
    }

        .cancel:hover {
            text-decoration: none;
        }
</style>