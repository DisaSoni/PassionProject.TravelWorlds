@model IEnumerable<PassionProject.TravelWorlds.Models.CountriesDto>

@{
    ViewBag.Title = "Create";
}

<h2>Create Province</h2>
<form action="/Provinces/Create" method="POST">
    <div>
        <label>Province Name:</label> <input type="text" name="ProvinceName" />
    </div>
    <div>
        <label>Country:</label> 
        <select name="CountryID">
            @foreach (var countries in Model)
            {
               <option value="@countries.CountryID"> @countries.CountryName </option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Province" />
    </div>
</form>
