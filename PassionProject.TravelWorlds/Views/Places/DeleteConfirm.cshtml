@model PassionProject.TravelWorlds.Models.PlaceDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<div style="font-size:30px; float:right;">
    <a class="cancel"href="/Places/List">Cancel</a>
    <a href="/Places/DeleteConfirm/@Model.PlaceID"> </a>
</div>

    <h3> Are You sure want to delete country?</h3>


    <h1>@Model.PlaceID @Model.PlaceName</h1>
    <div> @Model.PlaceReviews</div>
    <div> @Model.ProvinceName</div>


    <form action="/Places/Delete/@Model.PlaceID" method="POST">
        <input type="submit" value="Confirm Delete" />

    </form>

    <style>

        .cancel {
            background-color: #0094ff;
            border-radius: 5px;
            padding: 10px 15px;
            text-decoration: none;
            color: #fff;
        }

            .cancel:hover {
                text-decoration: none;
            }
    </style>